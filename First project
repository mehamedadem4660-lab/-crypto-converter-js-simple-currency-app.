    <style>
        body {
            margin: 0;
            padding: 0;
            background: #050505;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            font-family: 'Segoe UI', sans-serif;
            position: relative;
        }

        
        .background-animation {
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            z-index: 0;
        }

        .symbol {
            position: absolute;
            color: rgba(0, 210, 255, 0.15);
            font-size: 2rem;
            user-select: none;
            animation: move linear infinite;
        }

        
        @keyframes move {
            from { transform: translateY(100vh) rotate(0deg); opacity: 0; }
            50% { opacity: 0.5; }
            to { transform: translateY(-10vh) rotate(360deg); opacity: 0; }
        }
        .card {
            background: rgba(20, 20, 20, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(0, 210, 255, 0.3);
            padding: 40px;
            border-radius: 25px;
            box-shadow: 0 0 30px rgba(0, 210, 255, 0.2);
            width: 350px;
            text-align: center;
            z-index: 10;
        }

        h2 { color: #00d2ff; margin-bottom: 25px; text-shadow: 0 0 10px #00d2ff; }

        input {
            width: 100%; padding: 12px; margin-bottom: 20px;
            border-radius: 10px; border: 1px solid #333;
            background: #111; color: #00ffcc; text-align: center;
            font-size: 1.1rem; outline: none;
        }

        button {
            width: 100%; padding: 12px; border-radius: 10px; border: none;
            background: linear-gradient(45deg, #00d2ff, #00ffcc);
            color: #000; font-weight: bold; cursor: pointer; transition: 0.3s;
        }

        button:hover { transform: scale(1.05); box-shadow: 0 0 20px #00ffcc; }

        #result {
            margin-top: 25px; color: #fff; font-size: 1.3rem;
            opacity: 0; transition: 0.5s;
        }

        .show { opacity: 1 !important; }
