<body>

    <div class="background-animation" id="symbolsContainer"></div>

    <div class="card">
        <h2>Crypto Converter</h2>
        <input type="number" id="amount" placeholder="المبلغ بالأورو (EUR)">
        <button onclick="convert()">تحويل السعر</button>
        <div id="result"></div>
    </div>

    <script>
        
        const container = document.getElementById('symbolsContainer');
        const symbols = ['₿', 'Ξ', '$', '€', '₮', 'Ł'];
        
        for (let i = 0; i < 40; i++) {
            let span = document.createElement('span');
            span.className = 'symbol';
            span.innerText = symbols[Math.floor(Math.random() * symbols.length)];
            
            
            span.style.left = Math.random() * 100 + 'vw';
            span.style.animationDuration = (Math.random() * 3 + 2) + 's'; // سرعة من 2 إلى 5 ثواني
            span.style.animationDelay = Math.random() * 5 + 's';
            span.style.fontSize = (Math.random() * 20 + 20) + 'px';
            
            container.appendChild(span);
        }

        function convert() {
            const amount = document.getElementById('amount').value;
            const resultDiv = document.getElementById('result');
            if(amount > 0) {
                resultDiv.innerHTML = (amount * 245).toLocaleString() + " دج";
                resultDiv.classList.add('show');
            }
        }
    </script>
</body>
